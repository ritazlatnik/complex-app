<%- include('includes/header') %>
<!-- header ends here -->

<div class="container py-md-5 container--narrow">
  <h2><img class="avatar-small" src="<%= user.avatar %>" >
  <%= profileUsername %>
  </h2>

  <div class="profile-nav nav nav-tabs pt-2 mb-4">
    <a href="#" class="profile-nav-link nav-item nav-link active">Posts: <%= posts.length %></a>
  </div>

  <div class="list-group">
    <% posts.forEach(function(post){ %>
    <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
    <img class="avatar-tiny" src="<%= user.avatar %>">
    <strong>
    <%= post.title %>
    </strong> on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDate() %>/<%=
    post.createdDate.getFullYear() %>
    </a>
    <%}) %>
  </div>
</div>

<!-- footer begins -->
<%- include('includes/footer') %>