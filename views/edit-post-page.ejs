<%- include("includes/header") %>
<!-- header ends here -->

<div class="container py-md-5 container--narrow">
	<form action="/post/<%= post._id %>/edit-post" method="POST">
		<div class="form-group">
			<label for="post-title" class="text-muted mb-1"><small>Title</small></label>
			<input required name="title" id="post-title" class="form-control form-control-lg form-control-title"
					type="text" placeholder="" autocomplete="off" value="<%= post.title %>">
		</div>

		<div class="form-group">
			<label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
			<textarea required name="body" id="post-body" class="body-content tall-textarea form-control"
					type="text"><%= post.body %></textarea>
		</div>

		<button class="btn btn-primary">Update Post</button>
			
	</form>
	<br>
	<button class="btn btn-primary"><a style="color: white; text-decoration: none;" href="/post/<%= post._id %>">Cancel</a></button>
</div>

<!-- footer begins -->
<%- include("includes/footer") %>
